/* pages/component/nav/nav.wxss */

.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  /* height: 50px; */
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}

.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}

.VerticalBox {
  display: flex;
}

.VerticalMain {
  background-color: #f1f1f1;
}

.text-break {
  word-break: break-all;
}

.menuName {
  width: 300rpx;
}

.menu {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  position: relative;
}

.menu-img {
  width: 140rpx;
  height: 140rpx;
}

.menu-img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.menu-info {
  margin-left: 20rpx;
  flex: 2;
}

.menu-name {
  font-size: 32rpx;
  font-weight: bold;
}

.menu-price {
  color: red;
  font-size: 32rpx;
  position: absolute;
  bottom: 20rpx;
}

.menu-plus {
  color: #1296db;
}

.menu-plus i {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}
