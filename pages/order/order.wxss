/* pages/order/order.wxss */

.topNav {
  display: flex;
  justify-content: space-between;
  height: 200rpx;
  position: absolute;
  top: 0px;
  width: 100%;
  padding: 40rpx 40rpx 0rpx 40rpx;
  border-bottom: 1px solid #f5f5f5;
}

.iconfont {
  font-size: 2rem;
  text-align: center;
  width: 100%;
}

.navItem_active {
  border-bottom: 2px solid #1296db;
}

.orderItem {
  margin-top: 240rpx !important;
  padding: 40rpx;
  border: 1px solid #eee;
  box-shadow: 0px 0px 20px #eee;
  margin: 40rpx;
  position: relative;
}

.order-shop {
  display: flex;
}

.order-info {
  border-bottom: 1px solid #ddd;
  width: 100%;
  display: flex;
}

.order-img {
  width: 160rpx;
  height: 120rpx;
  margin-right: 20px;
}

.order-img image {
  width: 100%;
  height: 100%;
}

.order-name {
  flex: 2;
}

.order-state {
  color: #666;
  font-size: 0.7rem;
}

.order-menu {
  display: flex;
  margin-top: 20rpx;
}

.order-menuName {
  flex: 2;
  color: #555;
}

.order-evaluate {
  margin-top: 20rpx;
  text-align: right;
}

.order-evaluate button {
  /* height: 60rpx;
  width: 20%; */
  line-height: 60rpx;
  background-color: #1296db;
  color: #fff;
  display: inline;
  padding: 10rpx 40rpx;
  font-size: 0.8rem;
}
